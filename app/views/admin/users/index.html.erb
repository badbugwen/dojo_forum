<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to'User list', admin_users_path, class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to'Tweet list', admin_root_path, class: "nav-link" %>
    </li>
  </ul>
  <table class="table table-hover">
     <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= form_for [:admin, user] do |f| %>
              <%= f.select :role, [["Admin", "admin"], ["Normal", "Normal"]] %>
              <%= f.submit %>
            <% end %>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>  
</div>