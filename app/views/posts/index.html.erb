<div class="container">
<%# Category link list  %>
  <nav class="nav">
    <%= link_to 'All', categories_path, class:"nav-link active" %>
    <% Category.all.each do |category| %>
      <%= link_to category.name, category_path(category), class:"nav-link" %>
    <% end %>
  </nav>
<%# post table  %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Replies count</th>
      <th scope="col">Title</th>
      <th scope="col">Last replied at</th>
      <th scope="col">Viewed count</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th scope="row"><%= post.replies_count %></th>
        <td><%= post.title %></td>
        <td></td>
        <td><%= post.viewed_count %></td>
      </tr>
    <% end %>  
    
  </tbody>
</table>
<%= paginate @posts, theme: 'twitter-bootstrap-4' %>
</div>