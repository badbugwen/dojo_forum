<div class="container">
  <%= render partial: "shared/profile", locals:{user: @user} %>
  <%# user's nav  %>
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to'My Post', user_path(@user), class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to'My Comment',comment_user_path(@user), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to'My Collect',collection_user_path(@user), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to'My Draft', draft_user_path(@user), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to'My Friend', friend_user_path(@user), class: "nav-link" %>
    </li>
  </ul>
  <%#post list  %>
  <table class="table table-sm">
  <tbody>
    <% @posts.each do |post| %>
      <tr class='row'>
        <td class="col-6"><%= link_to post.title, post_path(post), class: "ml-4" %></td>
        <td class="col-1"><%= post.status == true ? 'Draft' : 'Publish' %></td>
        <td class="col-2"><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <% if current_user == @user %>
          <td class="col-2">
            <%= link_to 'edit', edit_post_path(post) %>
            <%= link_to 'delete', post_path(post), method: :delete, data:{ confirm: "Are you sure?" }%>    
          </td>
        <% end %>  
      </tr>
    <% end %>  
  </tbody>
</table>

</div>